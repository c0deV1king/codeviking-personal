---
import { blogs } from "../../data/blogs";
import BlogBlock from "../ui/BlogBlock.astro";
---

<div class="flex justify-center mt-8 mb-8">
  <div class="flex flex-col p-0 w-[100%] sm:w-[50%]">
    <h2 class="text-2xl font-light text-black self-center sm:self-start mb-4">
      Blogs
    </h2>
    <ul class="space-y-4">
      {
        blogs.map((blog) => (
          <BlogBlock
            title={blog.title}
            tags={blog.tags}
            date={blog.date}
            slug={blog.slug}
          />
        ))
      }
    </ul>
  </div>
</div>
